@using GidaGkpWeb.Infrastructure.Authentication;
@using GidaGkpWeb.Models.Masters;
@{
    ViewBag.Title = "PaymentRequest";
    Layout = "~/Views/Shared/_ApplicantLayout.cshtml";
    var UserData = ViewData["UserData"] as ApplicationDetailModel;
}

<link href="~/styles/style.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
<section class="form">
    <!-- MultiStep Form -->
    <div class="container-fluid" id="grad1">
        <div class="container">
            <form method="post" name="redirect" action="https://secure.ccavenue.com/transaction.do?command=initiateTransaction">
                <input type="hidden" id="encRequest" name="encRequest" value="@Convert.ToString(Session["strEncRequest"])" />
                <input type="hidden" name="access_code" id="Hidden1" value="@Convert.ToString(Session["strAccessCode"])" />
                <div class="row">
                    <div class="receipt-main col-xs-10 col-sm-10 col-md-6 col-xs-offset-1 col-sm-offset-1 col-md-offset-3">
                        <div class="row">
                            <div class="receipt-header">
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="receipt-left">
                                        <img class="img-responsive" alt="GIDA" src="~/Content/files/Gida-mainlogo.png" style="width: 71px; border-radius: 43px;">
                                    </div>
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-6 text-right">
                                    <div class="receipt-right">
                                        <h5>Gorakhpur Industrial Development Authority (GIDA)</h5>
                                        <h5>गोरखपुर औद्योगिक विकास प्राधिकरण  (गीडा)</h5>
                                        <p>Sec.-7, GIDA, Gorakhpur, Uttar Pradesh 273212 <i class="fa fa-location-arrow"></i></p>
                                        <p>0551-2580010,2580090 <i class="fa fa-phone"></i></p>
                                        <p>ceogida-up@up.gov.in <i class="fa fa-envelope-o"></i></p>

                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="receipt-header receipt-header-mid">
                                <div class="col-xs-8 col-sm-8 col-md-8 text-left">
                                    <div class="receipt-right">
                                        <h5>Name: @UserData.FullApplicantName <small>  |   Application Number : @UserData.ApplicationNumber</small></h5>
                                        <p><b>Mobile :</b> @UserData.Mobile</p>
                                        <p><b>Email :</b> @((User as CustomPrincipal).Email)</p>
                                        <p><b>Address :</b> @UserData.CAddress</p>
                                    </div>
                                </div>
                                <div class="col-xs-4 col-sm-4 col-md-4">
                                    <div class="receipt-left">
                                        <h2>Receipt</h2>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Description</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="col-md-9">Payment for August 2016</td>
                                        <td class="col-md-3"><i class="fa fa-inr"></i> 15,000/-</td>
                                    </tr>
                                    <tr>
                                        <td class="col-md-9">Payment for June 2016</td>
                                        <td class="col-md-3"><i class="fa fa-inr"></i> 6,00/-</td>
                                    </tr>
                                    <tr>
                                        <td class="col-md-9">Payment for May 2016</td>
                                        <td class="col-md-3"><i class="fa fa-inr"></i> 35,00/-</td>
                                    </tr>
                                    <tr>
                                        <td class="text-right">
                                            <p>
                                                <strong>Total Amount: </strong>
                                            </p>
                                            <p>
                                                <strong>Late Fees: </strong>
                                            </p>
                                            <p>
                                                <strong>Payable Amount: </strong>
                                            </p>
                                            <p>
                                                <strong>Balance Due: </strong>
                                            </p>
                                        </td>
                                        <td>
                                            <p>
                                                <strong><i class="fa fa-inr"></i>@UserData.TotalAmount</strong>
                                            </p>
                                            <p>
                                                <strong><i class="fa fa-inr"></i> </strong>
                                            </p>
                                            <p>
                                                <strong><i class="fa fa-inr"></i> @UserData.NetAmount</strong>
                                            </p>
                                            <p>
                                                <strong><i class="fa fa-inr"></i> </strong>
                                            </p>
                                        </td>
                                    </tr>
                                    <tr>

                                        <td class="text-right"><h2><strong>Total: </strong></h2></td>
                                        <td class="text-left text-danger"><h2><strong><i class="fa fa-inr"></i> @UserData.NetAmount</strong></h2></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="row">
                            <div class="receipt-header receipt-header-mid receipt-footer">
                                <div class="col-xs-8 col-sm-8 col-md-8 text-left">
                                    <div class="receipt-right">
                                        <p><b>Date :</b> @DateTime.Now.ToShortDateString()</p>
                                        <h5 style="color: rgb(140, 140, 140);">Thank you for your business!</h5>
                                    </div>
                                </div>
                                <div class="col-xs-4 col-sm-4 col-md-4">
                                    <div class="receipt-left">
                                        <input type="submit" name="next" id="Step6NextButton" class="next action-button pull-right" value="Make Payment" />
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </form>
        </div>
        @*<div class="container">
                <div class="row justify-content-center mt-0" style="padding:30px 20px">
                    <div class="col-sm-12 col-xs-12">
                        <div class="card px-0 pt-4 pb-0 mt-3 mb-3">
                            <div class="col-sm-12 col-xs-12">
                                <div class="col-sm-6 col-xs-6">
                                    <h2><strong>Make Payment for Total Amount</strong></h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 mx-0">
                        <form method="post" name="redirect" action="https://secure.ccavenue.com/transaction.do?command=initiateTransaction">
                            <div class="form-group col-sm-6 col-xs-12">
                                <label for="usertype" class="text-uppercase">Total Amount</label>
                                <label for="usertype" class="text-uppercase">@Convert.ToString(Session["AmountToBePaid"])</label>
                                <input type="hidden" id="encRequest" name="encRequest" value="@Convert.ToString(Session["strEncRequest"])" />
